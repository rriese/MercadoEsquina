
@{
    ViewBag.Title = "Employee";
}
@model IEnumerable<MercadoEsquina.Models.Employee>
@{
    ViewData["Title"] = "Listagem de Funcionários";
}

@if (!Model.Any())
{
    <center>
        <h1>Não temos nenhum funcionário ainda.</h1>
        @Html.ActionLink("Novo Funcionário", "New", null, new { @class = "btn btn-primary" })
    </center>
}
else
{

    using (Html.BeginForm())
    {
    <center>
        @Html.ActionLink("Novo Funcionário", "New", null, new { @class = "btn btn-primary" })
        <h2>Funcionários Cadastrados</h2>
    </center>
    <table class="table table-bordered table-hover" id="employees">
        <thead>
            <tr>
                <th>#</th>
                <th>Id</th>
                <th>Nome</th>
                <th>Cpf</th>
                <th>Data de Nascimento</th>
                <th>Função</th>
                <th>Salário</th>
                <th>Número de Telefone</th>
                <th style="text-align: center">#</th>
            </tr>
        </thead>
        <tbody>
            @{ int cont = 0; }
            @foreach (var employees in Model)
            {
                <tr>
                    <th scope="row">@(++cont)</th>
                    <td>@employees.Id</td>
                    <td>@employees.Name</td>
                    <td>@employees.Cpf</td>
                    <td>@String.Format("{0: dd/MM/yyyy }", employees.BirthDate)</td>
                    <td>@employees.Function</td>
                    <td>@employees.Salary</td>
                    <td>@employees.PhoneNumber</td>

                    <td style="text-align:center">
                        @Html.ActionLink("EDITAR", "Edit", new { employees.Id }, new { @class = "btn btn-primary" })
                        <button type="button" data-employee-id="@employees.Id" class="btn btn-primary" id="remove">Remover</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
                }
@section scripts {
    <script>
        $(document).ready(function () {
            $("#employees").on("click", "#remove",
                function () {
                    var button = $(this);
                    bootbox.confirm("Tem certeza que quer remover este funcionário?",
                        function (result) {
                            if (result) {
                                $.ajax({
                                    url: "/Employees/Remove/" + button.attr("data-employee-id"),
                                    method: "GET",
                                    success: function () {
                                        button.parents("tr").remove();
                                    }
                                });
                            }
                        });
                });
        });
    </script>
}
                }