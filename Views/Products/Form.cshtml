@model MercadoEsquina.ViewModels.ProductViewModel
@{
    ViewBag.Title = "Formulário Produto";
}

@using (Html.BeginForm("Save", "Products"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Product.Id)

    <center><h2>@Model.Title</h2></center>

    <div class="form-group">
        @Html.LabelFor(m => m.Product.Description)
        @Html.TextBoxFor(m => m.Product.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Product.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Product.Value)
        @Html.TextBoxFor(m => m.Product.Value, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Product.Value)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Product.Quantity)
        @Html.TextBoxFor(m => m.Product.Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Product.Quantity)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Product.SupplierId)
        @Html.DropDownListFor(m => m.Product.SupplierId,
            new SelectList(Model.Suppliers, "Id", "Name"),
            "Escolha um fornecedor", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Product.SupplierId)
    </div>
    <div class="btnSubmit">
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}