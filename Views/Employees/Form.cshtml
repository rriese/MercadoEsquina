@model MercadoEsquina.Models.Employee
@{
    ViewData["Title"] = "Editar/Cadastrar Funcionário";
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

@using (Html.BeginForm("Save", "Employees"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    if (Model.Id == 0)
    {
        <center><h2>Cadastro de Funcionário</h2></center>
    }
    else {
        <center><h2>Edição de Funcionário</h2></center>
    }

    <div class="container">
        <div class="col-md-12">
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                @Html.Label("Nome")
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div class="form-group">
                @Html.Label("Cpf")
                @Html.TextBoxFor(m => m.Cpf, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Cpf)
            </div>
            <div class="form-group">
                @Html.Label("Data de Nascimento")
                @Html.TextBoxFor(m => m.BirthDate, "{0:dd/MM/yyyy}", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.BirthDate)
            </div>
            <div class="form-group">
                @Html.Label("Função")
                @Html.TextBoxFor(m => m.Function, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Function)
            </div>
            <div class="form-group">
                @Html.Label("Salário")
                @Html.TextBoxFor(m => m.Salary, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Salary)
            </div>
            <div class="form-group">
                @Html.Label("Número de Telefone")
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PhoneNumber)
            </div>
            <div class="btnSubmit">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </div>
}