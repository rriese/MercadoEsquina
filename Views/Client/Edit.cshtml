@model MercadoEsquina.Models.Client
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container">
    <h2>Editando Cliente</h2>
    <div class="col-md-12">
        <form>
            <div class="form-group">
                <label for="email">Id:</label>
                <input type="number" class="form-control" id="email" placeholder="Digite ID -> Temporário" readonly="readonly" value="@Model.id">
            </div>
            <div class="form-group">
                <label for="pwd">Nome:</label>
                <input type="text" class="form-control" id="pwd" placeholder="Digite seu nome" value="@Model.name" required="required">
            </div>
            <div class="form-group">
                <label for="pwd">Cpf:</label>
                <input type="text" class="form-control" id="pwd" placeholder="Digite seu cpf" value="@Model.cpf" required="required">
            </div>
            <div class="form-group">
                <label for="pwd">Data de Nascimento:</label>
                <input type="text" class="form-control" id="pwd" placeholder="Digite sua data de nascimento" value="@Model.birthDate.ToShortDateString()" required="required">
            </div>
            <button type="submit" class="btn btn-default" value="Register">Submit</button>
        </form>
    </div>
</div>