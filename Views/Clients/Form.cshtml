@model MercadoEsquina.ViewModels.ClientViewModel
@{
    ViewBag.Title = "Formulário Cliente";
}

@using (Html.BeginForm("Save", "Clients"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Client.Id)

    <center><h2>@Model.Title</h2></center>

    <div class="form-group">
        @Html.LabelFor(m => m.Client.Name)
        @Html.TextBoxFor(m => m.Client.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Client.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Client.Cpf)
        @Html.TextBoxFor(m => m.Client.Cpf, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Client.Cpf)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Client.BirthDate)
        @Html.TextBoxFor(m => m.Client.BirthDate, "{0:dd/MM/yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Client.BirthDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Client.PhoneNumber)
        @Html.TextBoxFor(m => m.Client.PhoneNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Client.PhoneNumber)
    </div>
    <div class="btnSubmit">
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}